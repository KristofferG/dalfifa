<h1>Spelare</h1>

<table>
  <thead>
    <tr>
      <th>Spelare</th>
      <th>Turrar</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.cups.map {|c| c.title}.join(', ') %></td>
        <td><%= link_to 'Visa', player %></td>
        <td><%= link_to 'Ändra', edit_player_path(player) %></td>
        <td><%= link_to 'Radera', player, method: :delete, data: { confirm: 'Är du säker?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Skapa ny Spelare', new_player_path %>
