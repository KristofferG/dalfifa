<h1>Alla turrar</h1>

<%= link_to 'Ny Turre', new_cup_path %>
<br><br>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Turrar</th>
      <th>Spelare</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cups.each do |cup| %>
      <tr>
        <td><%= cup.id %></td>
        <td><%= cup.title %></td>
        <td><%= cup.players.map {|p| p.name}.join(', ') %></td>
        <td><%= link_to 'Visa', cup %></td>
        <td><%= link_to 'Ändra', edit_cup_path(cup) %></td>
        <td><%= link_to 'Radera', cup, method: :delete, data: { confirm: 'Är du säker?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
