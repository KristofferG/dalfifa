<h1>Uppdatera resultat</h1>

<% form_for :match, :url => {:action => 'update_matches'} do |f|%>

  <% @matches.each do |match| %>
    <% fields_for "match[]", match do |match_fields| %>


      <%= match_fields.text_field :team1_score %>
      <%= match_fields.text_field :team2_score %>

      <% end %>
    <% end %>

  <%= submit_tag 'Uppdatera' %>
<% end %>


<%= link_to 'Ny match', new_match_path %><br>
<%= link_to 'Turrar', cups_path %>
