<p id="notice"><%= notice %></p>
<div align="center"><h1>Uppdatera resultat</h1></div>
<div class="row">
  <div class="col-xs-12 col-md-8 col-md-offset-2">
<%= form_for :match, :url => update_matches_path, :html => { :method => :put } do %>
  <table class="table">
    <thead>
    <tr>
      <th>Turre</td>
      <th>Lag 1</th>
      <th>Mål lag 1</th>
      <th>Mål lag 2</th>
      <th>Lag 2</th>
    </tr>
  </thead>
  <tbody>
    <% @matches.each do |match| %>
      <%= fields_for "match[]", match do |match_fields| %>
      <tr>
        <td><%= match.cup.title %></td>
        <td><%= match.players[0].name %> & <%= match.players[1].name %></td>
        <td><%= match_fields.number_field :team1_score, in: 0..11, class: 'form-control' %></td>
        <td><%= match_fields.number_field :team2_score, in: 0..11, class: 'form-control' %></td>
        <td> <%= match.players[2].name %> & <%= match.players[3].name %></td>
        <% end %>

      </tr>
      <% end %>
    </tbody>
  </table>
<br>
  <div class="actions" align="center">
    <%= submit_tag "Ändra resultat", class: 'btn btn-primary btn-lg'%>
  </div>
<% end %>
</div>
</div>
