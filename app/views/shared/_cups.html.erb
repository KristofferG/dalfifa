<div>
<h1>Turrar</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Titel</th>
      <th>Datum</th>
      <th>Spelare</td>
    </tr>
  </thead>
  <tbody>
    <% @cups = Cup.all %>
    <% @cups.each do |cup| %>
      <tr>
        <td style="vertical-align:middle"><%= cup.title %> &nbsp; <%= image_tag("officiell.png", alt: 'Approved by Pennert', height: '41', width: '50') if cup.official == true  %></td>
        <td style="vertical-align:middle"><small><%= cup.created_at.strftime("%Y.%m.%d") %></small></td>
        <td style="vertical-align:middle">
          <% cup.players.each do |p| %>
            <% if p.avatar? %>
              <%= image_tag p.avatar.tiny, :class => "photo_small", :dpr => 2.0, :width => 25, :height => 25, :title => p.name %>
            <% else %>
              <%= p.name %>
            <% end %>
          <% end %>
        </td>
        <td align="right" style="vertical-align:middle"><%= link_to 'Visa', cup, class: 'btn btn-success btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
