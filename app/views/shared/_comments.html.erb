<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <h2>Kommentarer</h2>
      <% @cup.comments.each do |comment| %>
      <div class="panel panel-success">
        <div class="panel-heading">
          <class="panel-title"><strong><%= comment.commenter %></strong> &nbsp;&nbsp;<small><%= comment.created_at.strftime("%Y.%m.%d") %> &nbsp;
            <% if logged_in? %>
              <%= link_to 'radera', [comment.cup, comment],
                 method: :delete, class: 'label label-danger',
                 data: { confirm: 'Är du säker?' } %>
            <% end %>
          </small>
        </div>
        <div class="panel-body">
          <%= comment.body %><br>
        </div>
      </div>
      <% end %>


  <br><br>
    <%= form_for([@cup, @cup.comments.build]) do |f| %>
      <div class="form-group">
        <%= f.label :Namn %><br>
        <%= f.text_field :commenter, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :Kommentar %><br>
        <%= f.text_area :body, class: 'form-control' %>
      </div>
      <p>
        <%= f.submit "Lägg till kommentar", class: 'btn btn-default' %>
      </p>
    <% end %>

  </div>
</div>
