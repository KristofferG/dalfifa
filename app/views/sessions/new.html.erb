<div class="block" id="block-login">
  <div class="content login">
    <div class="flash">
      <% flash.each do |type, message| %>
        <div class="message notice">
          <p>
            <%= message %>
          </p>
        </div>
      <% end %>
    </div>
  <%= form_tag do %>
    <fieldset>
      <legend>Logga in</legend>
      <div class="form-group">
        <div>
          <%= label_tag :name, 'Användarnamn:' %>
        </div>
        <div>
        <%= text_field_tag :name, params[:name], class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div><%= label_tag :password, 'Lösenord:' %></div>
        <div><%= password_field_tag :password, params[:password], class: 'form-control' %></div>
      </div>
      <div class="form-group">
        <div><%= submit_tag "LOGGA IN", class: 'btn btn-primary' %></div>
      </div>
    </fieldset>
  <% end %>
  <%= link_to 'Tillbaka', :back %>
  </div>
</div>
